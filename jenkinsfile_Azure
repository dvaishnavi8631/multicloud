pipeline {
    agent any
    environment {
        AZURE_SUBSCRIPTION_ID = '2d101f2e-3531-4cd5-a463-6f697453bb43'  // Your Azure Subscription ID
        AZURE_RESOURCE_GROUP = 'Multicloud'    // Your Azure Resource Group
        AKS_CLUSTER_NAME = 'multicloudAKS'            // Your AKS cluster name
        IMAGE_NAME = 'multicloud-app'                            // Your application image name
        IMAGE_TAG = 'latest'                                   // Docker image tag
    }
    stages {
        stage('Login to Azure') {
            steps {
                script {
                    withCredentials([
                        string(credentialsId: 'azure-client-id', variable: 'AZURE_CLIENT_ID'),
                        string(credentialsId: 'azure-client-secret', variable: 'AZURE_CLIENT_SECRET'),
                        string(credentialsId: 'azure-tenant-id', variable: 'AZURE_TENANT_ID')
                    ]) {
                        echo "Logging in to Azure with Service Principal..."
                        sh """
                        az login --service-principal -u ${AZURE_CLIENT_ID} -p ${AZURE_CLIENT_SECRET} --tenant ${AZURE_TENANT_ID}
                        az account show --output table
                        """
                    }
                }
            }
        }
        // Other stages omitted for brevity
        stage('Deploy to AKS') {
            steps {
                script {
                    echo "Deploying application to AKS..."
                    withCredentials([usernamePassword(credentialsId: 'github', usernameVariable: 'GITHUB_USER', passwordVariable: 'GITHUB_TOKEN')]) {
                        sh """
                        if [ -d multicloud ]; then
                            rm -rf multicloud
                        fi
                        git clone https://${GITHUB_USER}:${GITHUB_TOKEN}@github.com/dvaishnavi8631/multicloud.git
                        """
                    }
                    sh """
                    kubectl apply -f multicloud/deployment.yaml
                    kubectl apply -f multicloud/service.yaml
                    """
                }
            }
        }
    }
}
